{
  "compilerOptions": {
    "target": "esnext", 
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "lib": ["es5", "es6", "dom"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true, 
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules/"
  ]
}
